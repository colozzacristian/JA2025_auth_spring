<hibernate-configuration>
<session-factory>
<!--  Connessione al database MySQL  -->
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<property name="hibernate.connection.url">${DB_URL}</property>
<property name="hibernate.connection.username">${DB_USER}</property>
<property name="hibernate.connection.password">${DB_PASSWORD}</property>
<!--  Configurazione del dialetto SQL  -->
<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
<!--  Mostra le query SQL generate  -->
<property name="hibernate.show_sql">false</property>
<property name="hibernate.format_sql">true</property>
<!--  Gestione automatica dello schema  -->
<property name="hibernate.hbm2ddl.auto">update</property>
<!--  Pool di connessioni (opzionale)  -->
<property name="hibernate.c3p0.min_size">5</property>
<property name="hibernate.c3p0.max_size">20</property>
<property name="hibernate.c3p0.timeout">300</property>
<property name="hibernate.c3p0.max_statements">50</property>
<property name="hibernate.c3p0.idle_test_period">3000</property>
<!--  Mappatura delle classi di entitÃ   -->
<mapping class="it.efothum.soviet.entities.Customers"/>
<mapping class="it.efothum.soviet.entities.Orders"/>
<mapping class="it.efothum.soviet.entities.Products"/>
<mapping class="it.efothum.soviet.entities.OrderDetails"/>
</session-factory>
</hibernate-configuration>